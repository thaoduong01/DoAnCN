@model IEnumerable<DACHUYENNGANH.Models.DoanhNghiep>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh Sách Doanh Nghiệp</h1>
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="DoanhNghieps" asp-action="Index">Doanh Nghiệp</a></li>
                <li class="breadcrumb-item active">Danh Sách Doanh Nghiệp @*: page @CurrentPage*@</li>
            </ol>
            <p class="btn btn-outline-secondary">
                <a asp-action="Create">Create New</a>
            </p>
            <div class="card mb-4">

                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="datatablesSimple" class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Doanh Nghiệp</th>
                                    <th scope="col">Người Đại Diện</th>
                                    <th scope="col">CMND/CCCD</th>
                                    <th scope="col">Địa Chỉ</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">SĐT</th>
                                    <th scope="col">Mã Khách Hàng</th>
                                </tr>
                            </thead>
                            @*<tfoot>
                            <tr>
                            <th scope="col">Doanh Nghiệp</th>
                            <th scope="col">Người Đại Diện</th>
                            <th scope="col">CMND/CCCD</th>
                            <th scope="col">Địa Chỉ</th>
                            <th scope="col">Email</th>
                            <th scope="col">SĐT</th>
                            <th scope="col">Mã Khách Hàng</th>
                            </tr>
                            </tfoot>*@
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.TenDoanhNghiep</td>
                                            <td>@item.TenNguoiDaiDien</td>
                                            <td>@item.CmndCccd</td>
                                            <td>@item.DiaChi</td>
                                            <td>@item.Email</td>
                                            <td>@item.Sdt</td>
                                            <td>@item.IdKhachHang</td>
                                            <td>
                                                <a class="btn btn-outline-primary" asp-area="Admin" asp-action="Edit" asp-route-id="@item.IdDoanhNghiep">Edit</a>
                                                <a class="btn btn-outline-secondary" asp-area="Admin" asp-action="Details" asp-route-id="@item.IdDoanhNghiep">Details</a>
                                                <a class="btn btn-outline-success" asp-area="Admin" asp-action="Delete" asp-route-id="@item.IdDoanhNghiep">Delete</a>
                                            </td>
                                        </tr>
                                    </tbody>

                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

