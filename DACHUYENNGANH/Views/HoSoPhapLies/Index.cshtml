@model IEnumerable<DACHUYENNGANH.Models.HoSoPhapLy>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh Sách Hồ Sơ Pháp Lý</h1>
            <ol class="breadcrumb mb-4">
                <a asp-controller="Home" asp-action="IndexUser" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-controller="HoSoPhapLies" asp-action="Index">Hồ Sơ Pháp Lý</a></li>
                <li class="breadcrumb-item active">Danh Sách Hồ Sơ Pháp Lý</li>
            </ol>
            <p class="btn btn-outline-secondary">
                <a asp-action="Create"><i class="fa-solid fa-plus"></i></a>
            </p>
            <div class="card mb-4">

                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="dataTables_length" id="dataTable_length">
                                    <label>
                                        Search:
                                        <form method="get" asp-action="Index">
                                            <div class="input-group rounded">
                                                <input type="search" class="form-control rounded" aria-label="Search" aria-describedby="search-addon" placeholder="Search for IdHsVay" @*value="@ViewData["Getnhanviendetails"]"*@ name="search" />
                                            </div>
                                        </form>
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <div id="dataTable_filter" class="dataTables_filter">
                                    <label>
                                        <br />
                                        <a asp-action="Index" class="btn btn-default m-r-5">Show All</a>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                    <thead>
                                        <tr>
                                            @*<th scope="col">Mã Hồ Sơ Pháp Lý</th>*@
                                            <th scope="col">Hồ Sơ Vay</th>
                                            <th scope="col">Giấy Chứng Nhận Đăng Ký Kinh Doanh</th>
                                            <th scope="col">Điều Lệ Công Ty</th>
                                            <th scope="col">Biên Bản Họp Hội Đồng</th>
                                            <th scope="col">Kế Toán Trưởng</th>
                                            <th scope="col">CMND/CCCD Kế Toán Trưởng</th>
                                            <th scope="col">Ngày Nhận Hồ Sơ</th>
                                            <th scope="col">Giấy Chứng Nhận Đăng Ký Thuế</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    @if (Model != null)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tbody>
                                                <tr>
                                                    @*<td>@item.IdPhapLy</td>*@
                                                    <td>@item.IdHsvay</td>
                                                    <td>@item.Gdkkd</td>
                                                    <td>@item.DieuLeCty</td>
                                                    <td>@item.BbhopHd</td>
                                                    <td>@item.TenKttruong</td>
                                                    <td>@item.CmndCccdKtt</td>
                                                    <td>@Html.DisplayFor(modelItem => item.NgayNhanHs)</td>
                                                    <td>@item.Gcndkthue</td>
                                                    <td>
                                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdPhapLy"><i class="fa-solid fa-pen-to-square"></i></a>
                                                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdPhapLy"><i class="fa-solid fa-circle-info"></i></a>
                                                        <a class="btn btn-outline-success" asp-action="Delete" asp-route-id="@item.IdPhapLy"><i class="fa-solid fa-trash"></i></a>
                                                    </td>
                                                </tr>
                                            </tbody>

                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</div>
