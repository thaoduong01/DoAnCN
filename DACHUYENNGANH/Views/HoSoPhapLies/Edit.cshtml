@model DACHUYENNGANH.Models.HoSoPhapLy

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>Home</a>
                <li class="breadcrumb-item"><a asp-controller="HoSoPhapLies" asp-action="Index">Hồ Sơ Pháp Lý</a></li>
                <li class="breadcrumb-item active">Thay Đổi Hồ Sơ Pháp Lý</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thay Đổi Hồ Sơ Pháp Lý</h1>
        </div>
        <form asp-action="Edit" class="card shadow" style="margin: auto; width: 80%; padding: 10px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPhapLy" />
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Mã Hồ Sơ Pháp Lý</label>
                <input type="text" disabled="true" class="form-control" asp-for="IdPhapLy">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Mã Hồ Sơ Vay</label>
                <select asp-for="IdHsvay" class="form-control" asp-items="ViewBag.IdHsvay"></select>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Giấy Chứng Nhận Đăng Ký Kinh Doanh</label>
                <input type="text" class="form-control" asp-for="Gdkkd">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Điều Lệ Công Ty</label>
                <input type="text" class="form-control" asp-for="DieuLeCty">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Biên Bản Họp Hội Đồng</label>
                <input type="text" class="form-control" asp-for="BbhopHd">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Kế Toán Trưởng</label>
                <input type="text" class="form-control" asp-for="TenKttruong">
            </div>

            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">CMND/CCCD Kế Toán Trưởng</label>
                <input type="text" class="form-control" asp-for="CmndCccdKtt">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Ngày Nhận Hồ Sơ</label>
                <input type="datetime" class="form-control" asp-for="NgayNhanHs">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Giấy Chứng Nhận Đăng Ký Thuế</label>
                <input type="text" class="form-control" asp-for="Gcndkthue">
            </div>
            <div class="form-group row">
                <div class="col-sm-10" style="line-height: 5; text-align: center;">
                    <button type="submit" class="btn btn-primary">Thay Đổi</button>
                </div>

            </div>
            <div class="form-group">
                <a asp-action="Index">Trở Về</a>
            </div>
        </form>
    </main>
</div>



<style>

    .form-group {
        color: #1F618D;
        font-weight: bold;
        font-size: 15px;
    }
</style>