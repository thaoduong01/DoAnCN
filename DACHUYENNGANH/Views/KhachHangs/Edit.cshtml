@model DACHUYENNGANH.Models.KhachHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-controller="KhachHangs" asp-action="Index">Khách Hàng</a></li>
                <li class="breadcrumb-item active">Thay Đổi Khách Hàng</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thay Đổi Chức Vụ</h1>
        </div>
        <form asp-action="Edit" class="card shadow" style="margin: auto; width: 80%; padding: 10px; padding: 2rem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Mã Khách Hàng</label>
                <input class="form-control" asp-for="IdKhachHang">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Mã Số Thuế</label>
                <input type="text" class="form-control" asp-for="MaSoThue">
            </div>

            <div class="form-group row">
                <div class="col-sm-10" style="line-height: 5; text-align: center;">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>

            </div>
            <div class="form-group">
                <a asp-action="Index">Trở Về</a>
            </div>
        </form>
    </main>
</div>

<style>

    .form-group {
        color: #1F618D;
        font-weight: bold;
        font-size: 15px;
    }
</style>

