@model IEnumerable<DACHUYENNGANH.Models.KhachHangCaNhan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh Sách Khách Hàng Cá Nhân</h1>
            <ol class="breadcrumb mb-4">
                <a asp-controller="Home" asp-action="IndexUser" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-controller="KhachHangCaNhans" asp-action="Index">Khách Hàng Cá Nhân</a></li>
                <li class="breadcrumb-item active">Danh Sách Khách Hàng Cá Nhân</li>
            </ol>
             <p class="btn btn-outline-secondary">
                <a asp-action="Create"><i class="fa-solid fa-plus"></i></a>
            </p>
            <div class="card mb-4">

                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="dataTables_length" id="dataTable_length">
                                    <label>
                                        Search:
                                        <form method="get" asp-action="Index">
                                            <div class="input-group rounded">
                                                <input type="search" class="form-control rounded" aria-label="Search" aria-describedby="search-addon" placeholder="Search for..." @*value="@ViewData["Getnhanviendetails"]"*@ name="search" />
                                            </div>
                                        </form>
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <div id="dataTable_filter" class="dataTables_filter">
                                    <label>
                                        <br />
                                        <form method="get" asp-action="Index">
                                            <div class="input-group-append">
                                                <select asp-items="@(new SelectList(ViewBag.KhachHang, "IdKhachHang", "MaSoThue"))" name="id" class="custom-select custom-select-sm form-control form-control-sm">
                                                    <option>Chọn Chức Vụ</option>
                                                </select>
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary" type="submit">
                                                        <i class="fas fa-search fa-sm"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </label>
                                </div>
                                <a asp-action="Index" class="btn btn-default m-r-5">Show All</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                    <thead>
                                        <tr>
                                            @*<th scope="col">Mã Khách Hàng Cá Nhân</th>*@
                                            @*<th scope="col">Mã Số Thuế </th>*@
                                            <th scope="col">Tên Khách Hàng</th>
                                            <th scope="col">Ngày Sinh</th>
                                            <th scope="col">Giới Tính</th>
                                            <th scope="col">SĐT</th>
                                            <th scope="col">Địa Chỉ</th>
                                            <th scope="col">CMND/CCCD</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    @if (Model != null)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tbody>
                                                <tr>
                                                    @*<td>@item.IdKhachHangCaNha</td>*@
                                                    @*<td>@item.IdKhachHangNavigation.MaSoThue</td>*@
                                                    <td>@item.TenKh</td>
                                                    <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                                                    <td>@item.GioiTinh</td>
                                                    <td>@item.Sdt</td>
                                                    <td>@item.DiaChi</td>
                                                    <td>@item.CmndCccd</td>
                                                    <td>
                                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdKhachHangCaNhan"><i class="fa-solid fa-pen-to-square"></i></a>
                                                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdKhachHangCaNhan"><i class="fa-solid fa-circle-info"></i></a>
                                                      
                                                    </td>
                                                </tr>
                                            </tbody>

                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</div>
