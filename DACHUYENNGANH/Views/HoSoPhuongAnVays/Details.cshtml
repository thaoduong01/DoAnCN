@model DACHUYENNGANH.Models.HoSoPhuongAnVay

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-controller="Home" asp-action="IndexUser" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-controller="HoSoPhuongAnVays" asp-action="Index">Hồ Sơ Phương Án Vay</a></li>
                <li class="breadcrumb-item active">Thông Tin Hồ Sơ Phương Án Vay</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thông Tin Hồ Sơ Phương Án Vay</h1>
            <div class="card mb-4" class="card shadow" style="margin: auto; width: 80%; padding: 10px; padding: 2rem" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="table-responsive" style="margin: auto; width: 60%; line-height: 2.5;">
                        <table style="color: #1F618D;font-weight: bold; font-size: 15px;">
                            <tbody>
                                <tr>
                                    <td>Mã Hồ Sơ Phương Án Vay: </td>
                                    <td style="padding:7px;">@Model.IdHspavay</td>
                                </tr>
                                <tr>
                                    <td>Mã Hồ Sơ Vay: </td>
                                    <td style="padding:7px;">@Model.IdHsvay</td>
                                </tr>
                                <tr>
                                    <td>Phương Án Kinh Doanh: </td>
                                    <td style="padding: 7px;">@Model.PhuongAnKd</td>
                                </tr>
                                <tr>
                                    <td>Kế Hoạch Trả Nợ: </td>
                                    <td style="padding:7px;">@Model.KeHoachTraNo</td>
                                </tr>
                                <tr>
                                    <td>Ngày Nhận Hồ Sơ: </td>
                                    <td style="padding:7px;">@Html.DisplayFor(model => model.NgayNhanHs)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div style="color: #1F618D;font-weight: bold; font-size: 15px;">
                <a asp-action="Index">Trở Về</a>
            </div>
        </div>
    </main>
</div>

