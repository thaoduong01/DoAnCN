@model DACHUYENNGANH.Models.HoSoTinDung

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HoSoTinDungs" asp-action="Index">Hồ Sơ Tín Dụng</a></li>
                <li class="breadcrumb-item active">Thêm Hồ Sơ Tín Dụng</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thêm Hồ Sơ Tín Dụng</h1>
        </div>
        <form asp-action="Edit" class="card shadow" style="margin: auto; width: 80%; padding: 10px; padding: 2rem; border: 3px solid black">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHstinDung" />
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Phí Mở Thẻ</label>
                <input type="text" class="form-control" asp-for="PhiMoThe">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Chữ Ký</label>
                <input type="text" class="form-control" asp-for="ChuKy">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Nhân Viên</label>
                <select asp-for="IdNhanVien" class="form-control" asp-items="ViewBag.IdNhanVien"></select>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Khách Hàng</label>
                <select asp-for="IdKhachHangCaNhan" class="form-control" asp-items="ViewBag.IdKhachHangCaNhan"></select>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Ngày Nhận Hồ Sơ</label>
                <input type="date" class="form-control" asp-for="NgayNhanHs">
            </div>
            <div class="form-group row">
                <div class="col-sm-10" style="line-height: 5; text-align: center;">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>

            </div>
            <div class="form-group">
                <a asp-action="Index">Trở Về</a>
            </div>
        </form>
    </main>
</div>

<style>

    .form-group {
        color: #1F618D;
        font-weight: bold;
        font-size: 15px;
    }
</style>

