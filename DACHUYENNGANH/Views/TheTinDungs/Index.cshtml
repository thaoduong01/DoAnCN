@model IEnumerable<DACHUYENNGANH.Models.TheTinDung>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh Sách Thẻ Tín Dụng</h1>
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="TheTinDungs" asp-action="Index">Thẻ Tín Dụng</a></li>
                <li class="breadcrumb-item active">Danh Sách Thẻ Tín Dụng</li>
            </ol>
            <p class="btn btn-outline-secondary">
                <a asp-action="Create">Create New</a>
            </p>
            <div class="card mb-4">

                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="dataTables_length" id="dataTable_length">
                                    <label>
                                        Show
                                        <select name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm">
                                            <option value="10">5</option>
                                            <option value="25">10</option>
                                            <option value="50">15</option>
                                            <option value="100">20</option>
                                        </select>
                                        entries
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <div id="dataTable_filter" class="dataTables_filter">
                                    <label>
                                        Search:
                                        <input type="search" class="form-control form-control-sm" placeholder="" aria-controls="dataTable">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                    <thead>
                                        <tr>
                                            @*<th scope="col">Mã Hồ Sơ Tín Dụng</th>*@
                                            <th scope="col">Số Thẻ</th>
                                            <th scope="col">Số Tài Khoản</th>
                                            <th scope="col">Tên Tài Khoản</th>
                                            <th scope="col">Ngày Mở Thẻ</th>
                                            <th scope="col">Ngày Nhận Thẻ</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    @if (Model != null)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tbody>
                                                <tr>
                                                    @*<td>@item.IdHstinDungNavigation.IdHstinDung</td>*@
                                                    <td>@item.SoTrenThe</td>
                                                    <td>@item.Stk</td>
                                                    <td>@item.TenTk</td>
                                                    <td>@item.NgayMoThe</td>
                                                    <td>@item.NgayNhanThe</td>
                                                    <td>
                                                        <a class="btn btn-outline-primary" asp-area="Admin" asp-action="Edit" asp-route-id="@item.Stk">Edit</a>
                                                        <a class="btn btn-outline-secondary" asp-area="Admin" asp-action="Details" asp-route-id="@item.Stk">Details</a>
                                                        <a class="btn btn-outline-success" asp-area="Admin" asp-action="Delete" asp-route-id="@item.Stk">Delete</a>
                                                    </td>
                                                </tr>
                                            </tbody>

                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</div>
