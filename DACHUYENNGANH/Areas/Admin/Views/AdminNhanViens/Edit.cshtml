@model DACHUYENNGANH.Models.NhanVien

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
           
            <ol class="breadcrumb mb-4">
                <a asp-controller="Home" asp-action="IndexUser" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-controller="AdminNhanVien" asp-action="Index">Nhân Viên</a></li>
                <li class="breadcrumb-item active">Sửa Thông Tin Nhân Viên</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Sửa Thông Tin Nhân Viên</h1>
        </div>
        <form asp-action="Edit" class="card shadow" style="margin: auto; width: 80%; padding: 10px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Tên Nhân Viên</label>
                <input type="text" class="form-control" asp-for="TenNhanVien">
            </div>
            <input type="hidden" asp-for="IdNhanVien" />
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Giới Tính</label>
                <select class="form-control" value="@Model.GioiTinh" asp-for="GioiTinh" aria-label="Default select example">
                    @*<option selected>Chọn giới tính</option>*@
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Ngày Sinh</label>
                <input type="text" asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">CMND/CCCD</label>
                <input type="text" class="form-control" asp-for="CmndCccd">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Email</label>
                <input type="text" class="form-control" asp-for="Email">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">SĐT</label>
                <input type="text" class="form-control" asp-for="Sdt">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Tên Đăng Nhập</label>
                <input type="text" class="form-control" asp-for="TenDangNhap">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Mật Khẩu</label>
                <input type="text" class="form-control" asp-for="MatKhau">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Chức Vụ</label>
                <select asp-for="IdChucVu" class="form-control" asp-items="ViewBag.IdChucVu"></select>
            </div>
            <div class="form-group row">
                <div class="col-sm-10" style="line-height: 5; text-align: center;">
                    <button type="submit" class="btn btn-primary">Thay Đổi</button>
                </div>

            </div>
            <div class="form-group">
                <a asp-action="Index">Trở Về</a>
            </div>
        </form>
    </main>
</div>

<style>

    .form-group {
        color: #1F618D;
        font-weight: bold;
        font-size: 15px;
    }
</style>