@model DACHUYENNGANH.Models.HoSoThamDinh

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-controller="Home" asp-action="IndexUser" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-controller="HoSoThamDinhs" asp-action="Index">Hồ Sơ Thẩm Định</a></li>
                <li class="breadcrumb-item active">Thay Đổi Hồ Sơ Thẩm Định</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thay Đổi Hồ Sơ Thẩm Định</h1>
        </div>
        <form asp-action="Edit" class="card shadow" style="margin: auto; width: 80%; padding: 10px;" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHsthamDinh" />
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Tên Công Ty</label>
                <select asp-for="IdCongTy" class="form-control" asp-items="ViewBag.IdCongTy"></select>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Hồ Sơ Tài Sản Đảm Bảo</label>
                <select asp-for="IdHsdb" class="form-control" asp-items="ViewBag.IdHsdb"></select>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Số Tiền Thẩm Định</label>
                <input type="text" class="form-control" asp-for="SoTienThamDinh">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Người Thẩm Định</label>
                <input type="text" class="form-control" asp-for="TenNguoiThamDinh">
                <span asp-validation-for="TenNguoiThamDinh" class="text-danger"></span>
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">CMND/CCCD</label>
                <input type="text" class="form-control" asp-for="CmndCccd">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Ngày Nhận Hồ Sơ</label>
                <input type="datetime" class="form-control" asp-for="NgayNhanHoSo">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Ngày Thẩm Định</label>
                <input type="datetime" class="form-control" asp-for="NgayThamDinh">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Báo Cáo Thẩm Định</label>
                <input type="file" accept=".pdf" class="form-control" asp-for="BaoCaoThamDinh">
            </div>
            <div class="form-group row">
                <div class="col-sm-10" style="line-height: 5; text-align: center;">
                    <button type="submit" class="btn btn-primary">Thay Đổi</button>
                </div>

            </div>
            <div class="form-group">
                <a asp-action="Index">Trở Về</a>
            </div>
        </form>
    </main>
</div>


<style>

    .form-group {
        color: #1F618D;
        font-weight: bold;
        font-size: 15px;
    }
</style>
