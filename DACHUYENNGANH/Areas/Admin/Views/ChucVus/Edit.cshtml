@model DACHUYENNGANH.Models.ChucVu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="ChucVus" asp-action="Index">Chức Vụ</a></li>
                <li class="breadcrumb-item active">Thay Đổi Chức Vụ</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thay Đổi Chức Vụ</h1>
        </div>
        <form asp-action="Edit" style="margin: auto; width: 80%; border: 3px solid black; padding: 10px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdChucVu" />
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Tên Chức Vụ</label>
                <input type="text" class="form-control" asp-for="TenChucVu">
            </div>

            <div class="form-group row">
                <div class="col-sm-10" style="line-height: 5; text-align: center;">
                    <button type="submit" class="btn btn-primary">Thay Đổi</button>
                </div>

            </div>
            <div class="form-group">
                <a asp-action="Index">Trở Về</a>
            </div>
        </form>
    </main>
</div>

<style>

    .form-group {
        color: #1F618D;
        font-weight: bold;
        font-size: 15px;
    }
</style>

