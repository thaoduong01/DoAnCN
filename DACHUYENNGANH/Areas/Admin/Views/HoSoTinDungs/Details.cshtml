@model DACHUYENNGANH.Models.HoSoTinDung

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HoSoTinDungs" asp-action="Index">Hồ Sơ Tín Dụng</a></li>
                <li class="breadcrumb-item active">Thông Tin Hồ Sơ Tín Dụng</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thông Tin Hồ Sơ Tín Dụng</h1>
            <div class="card mb-4" style="margin: auto; width: 80%; border: 3px solid black; padding: 10px;line-height: 2.5;">
                <div class="card-body">
                    <div class="table-responsive" style="margin: auto; width: 60%; line-height: 2.5;">
                        <table style="color: #1F618D;font-weight: bold; font-size: 15px;">
                            <tbody>
                                <tr>
                                    <td>Mã Hồ Sơ Tín Dụng: </td>
                                    <td style="padding:7px;">@Model.IdHstinDung</td>
                                </tr>
                                <tr>
                                    <td>Khách Hàng: </td>
                                    <td style="padding: 7px;">@Model.IdKhachHangCaNhanNavigation.TenKh</td>
                                </tr>
                                <tr>
                                    <td>Nhân Viên: </td>
                                    <td style="padding:7px;">@Model.IdNhanVienNavigation.TenNhanVien</td>
                                </tr>
                                <tr>
                                    <td>Chữ Ký: </td>
                                    <td style="padding:7px;">@Model.ChuKy</td>
                                </tr>
                                <tr>
                                    <td>Phí Mở Thẻ: </td>
                                    <td style="padding: 7px;">@Model.PhiMoThe</td>
                                </tr>
                                <tr>
                                    <td>Ngày Nhận Hồ Sơ: </td>
                                    <td style="padding:7px;">@Html.DisplayFor(model => model.NgayNhanHs)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div style="color: #1F618D;font-weight: bold; font-size: 15px;">
                <a asp-action="Edit" asp-route-id="@Model.IdHstinDung">Edit</a> |
                <a asp-area="Admin" asp-action="Index">Trở Về</a>
            </div>
        </div>
    </main>
</div>

