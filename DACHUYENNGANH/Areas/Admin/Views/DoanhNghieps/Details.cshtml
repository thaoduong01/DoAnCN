@model DACHUYENNGANH.Models.DoanhNghiep

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="DoanhNghieps" asp-action="Index">Doanh Nghiệp</a></li>
                <li class="breadcrumb-item active">Thông Tin Doanh Nghiệp</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thông Tin Doanh Nghiệp</h1>
            <div class="card mb-4" style="margin: auto; width: 80%; border: 3px solid black; padding: 20px;line-height: 2.5;">
                <div class="card-body">
                    <div class="table-responsive" style="margin: auto; width: 60%; line-height: 2.5;">
                        <table style="color: #1F618D;font-weight: bold; font-size: 15px;">
                            <tbody>
                                <tr>
                                    <td>Doanh Nghiệp: </td>
                                    <td style="padding: 7px;">@Model.TenDoanhNghiep</td>
                                </tr>
                                <tr>
                                    <td>Mã Doanh Nghiệp: </td>
                                    <td style="padding:7px;">@Model.IdDoanhNghiep</td>
                                </tr>
                                <tr>
                                    <td>Người Đại Diện: </td>
                                    <td style="padding:7px;">@Model.TenNguoiDaiDien</td>
                                </tr>
                                <tr>
                                    <td>CMND/CCCD: </td>
                                    <td style="padding: 7px;">@Model.CmndCccd</td>
                                </tr>
                                <tr>
                                    <td>Địa Chỉ: </td>
                                    <td style="padding:7px;">@Model.DiaChi</td>
                                </tr>
                                <tr>
                                    <td>SĐT: </td>
                                    <td style="padding: 7px;">@Model.Sdt</td>
                                </tr>
                                <tr>
                                    <td>Email: </td>
                                    <td style="padding:7px;">@Model.Email</td>
                                </tr>
                                <tr>
                                    <td>Mã Khách Hàng: </td>
                                    <td style="padding:7px;">@Model.IdKhachHangNavigation.IdKhachHang</td>
                                </tr>
                            </tbody>
                        </table>
                        <div style="color: #1F618D;font-weight: bold; font-size: 15px;">
                            <a asp-action="Index">Trở Về</a>
                        </div>
                    </div>
                </div>
            </div>
            <div style="height: 100vh"></div>
        </div>
    </main>

</div>



