@model IEnumerable<DACHUYENNGANH.Models.DoanhNghiep>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Danh Sách Doanh Nghiệp</h1>
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="DoanhNghieps" asp-action="Index">Doanh Nghiệp</a></li>
                <li class="breadcrumb-item active">Danh Sách Doanh Nghiệp @*: page @CurrentPage*@</li>
            </ol>
             <p class="btn btn-outline-secondary">
                <a asp-action="Create"><i class="fa-solid fa-plus"></i></a>
            </p>
            <div class="card mb-4">

                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Danh sách
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="dataTables_length" id="dataTable_length">
                                    <label>
                                        Show
                                        <select name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm">
                                            <option value="10">5</option>
                                            <option value="25">10</option>
                                            <option value="50">15</option>
                                            <option value="100">20</option>
                                        </select>
                                        entries
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <div id="dataTable_filter" class="dataTables_filter">
                                    <label>
                                        Search:  <span class="search-icon"><i class="fa fa-search search-icon"></i></span>
                                        <form method="get" asp-action="Index">
                                            <div class="input-group rounded">
                                                <input type="search" class="form-control rounded" aria-label="Search" aria-describedby="search-addon" value="@ViewData["Getdoanhnghiepdetails"]" name="search" />
                                           
                                            </div>
                                        </form>
                                    </label>

                                    <a asp-action="Index" class="btn btn-default m-r-5">Show All</a>
                                </div>
                            </div>
                        </div>
                        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th scope="col">Doanh Nghiệp</th>
                                    <th scope="col">Người Đại Diện</th>
                                    <th scope="col">CMND/CCCD</th>
                                    <th scope="col">Địa Chỉ</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">SĐT</th>
                                    <th scope="col">Mã Khách Hàng</th>
                                </tr>
                            </thead>
                            @*<tfoot>
                            <tr>
                            <th scope="col">Doanh Nghiệp</th>
                            <th scope="col">Người Đại Diện</th>
                            <th scope="col">CMND/CCCD</th>
                            <th scope="col">Địa Chỉ</th>
                            <th scope="col">Email</th>
                            <th scope="col">SĐT</th>
                            <th scope="col">Mã Khách Hàng</th>
                            </tr>
                            </tfoot>*@
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.TenDoanhNghiep</td>
                                            <td>@item.TenNguoiDaiDien</td>
                                            <td>@item.CmndCccd</td>
                                            <td>@item.DiaChi</td>
                                            <td>@item.Email</td>
                                            <td>@item.Sdt</td>
                                            <td>@item.IdKhachHang</td>
                                            <td>
                                                <a class="btn btn-outline-primary" asp-area="Admin" asp-action="Edit" asp-route-id="@item.IdDoanhNghiep"><i class="fa-solid fa-pen-to-square"></i></a>
                                                <a class="btn btn-outline-secondary" asp-area="Admin" asp-action="Details" asp-route-id="@item.IdDoanhNghiep"><i class="fa-solid fa-circle-info"></i></a>
                                                <a class="btn btn-outline-success" asp-area="Admin" asp-action="Delete" asp-route-id="@item.IdDoanhNghiep"><i class="fa-solid fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    </tbody>

                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

