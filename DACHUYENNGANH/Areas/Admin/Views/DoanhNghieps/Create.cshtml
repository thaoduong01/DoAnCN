@model DACHUYENNGANH.Models.DoanhNghiep

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4" style="text-align: center;">
            <ol class="breadcrumb mb-4">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="breadcrumb-item"><i class="fa-solid fa-house"></i>HomeAdmin</a>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="DoanhNghieps" asp-action="Edit">Doanh Nghiệp</a></li>
                <li class="breadcrumb-item active">Chỉnh Sửa Thông Tin Doanh Nghiệp</li>
            </ol>
            <h1 class="mt-4" style="color: #1F618D;font-weight: bold;">Thêm Doanh Nghiệp</h1>
        </div>
        <form asp-action="Create" class="card shadow" style="margin: auto; width: 80%; padding: 10px; padding: 2rem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Doanh Nghiệp</label>
                <input type="text" class="form-control" asp-for="TenDoanhNghiep">
            </div>
           @* <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Mã Doanh Nghiệp</label>
                <input type="text" class="form-control" asp-for="IdDoanhNghiep">
            </div>*@
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Người Đại Diện</label>
                <input type="text" class="form-control" asp-for="TenNguoiDaiDien">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">CMND/CCCD</label>
                <input type="text" class="form-control" asp-for="CmndCccd">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Email</label>
                <input type="text" class="form-control" asp-for="Email">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">SĐT</label>
                <input type="text" class="form-control" asp-for="Sdt">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Địa Chỉ</label>
                <input type="text" class="form-control" asp-for="DiaChi">
            </div>
            <div class="form-group" style="line-height: 3;">
                <label style="text-align: center;">Mã Khách Hàng</label>
                <select asp-for="IdKhachHang" class="form-control" asp-items="ViewBag.IdKhachHang"></select>
            </div>
            <div class="form-group row">
                <div class="col-sm-10" style="line-height: 5; text-align: center;">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
         
            </div>
            <div class="form-group">
                <a asp-action="Index">Trở Về</a>
            </div>
        </form>
    </main>
</div>

<style>

    .form-group {
        color: #1F618D;
        font-weight: bold;
        font-size: 15px;
    }
</style>